---
interface Props {
  backlink?: string;
  action?: string;
  action_label?: string;
}

const { backlink, action, action_label } = Astro.props;
---

<header class="flex w-full justify-between items-center mb-4 h-10">
  <div class="flex gap-4">
    {
      backlink && (
        <a
          href={backlink}
          class="hover:bg-secondary-200 transition-colors rounded p-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M21 12H3m0 0l8.5-8.5M3 12l8.5 8.5"
            />
          </svg>
        </a>
      )
    }
    <h1 class="grid place-items-center text-xl font-bold">
      <slot />
    </h1>
  </div>
  {
    action && (
      <form action={action} method="POST">
        <button type="submit" class="btn-primary">
          <span>{action_label || "Send"}</span>
        </button>
      </form>
    )
  }
</header>
